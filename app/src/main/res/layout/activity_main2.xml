<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anandika.anandikanuriman_1202150112_modul1.Main2Activity">

    <TextView
        android:id="@+id/makan_malam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingTop="40dp"   />



    <TextView
        android:id="@+id/tempat_makan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textAlignment="center"
        android:layout_marginVertical="50dp"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/nama_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porsi"
        android:textAlignment="center"
        android:layout_marginVertical="30dp"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textAlignment="center"
        android:layout_marginVertical="30dp"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/jumlah1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textSize="20dp"/>







</LinearLayout>